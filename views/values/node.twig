{% if plain %}
    {{ text|lower }}
{% elseif link %}
    <a href="{{ path('node', {id:node.getId}) }}">{{ node.getName }}</a>
{% else %}
    <h4>{{node.getName|e}} </h4>
    <p>OMSCHRIJVING: {{node.getDescription|e}}<p>
    <a href="{{path('node', {id:node.getId})}}")>More info</a>
    {% if is_granted('EDIT_USER') %}
        <a href="{{path('update',{id: node.getId})}}">Update</a>
    {% endif %}
    {%  if node.x != 0 %}
        <button class="focus-map" data-layer="{{ node.layer.id }}" data-x="{{ node.x }}" data-y="{{ node.y }}">
            Focus
        </button>
    {% endif %}
{% endif %}
