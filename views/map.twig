{% extends 'baselayout.twig' %}
{% block title 'Map overview' %}

{% block content %}
		<h1>Map view</h1>

		<div id="map" style="width:100%; height:399px;"></div>
		<div id="3dmap" class='content' style="width:100%; height:399px; float:left; position:relative;"></div>

		<div id="nodeInfo"></div>
		<p>All nodes with geographical information</p>

		<ul class="nodes">
			{% for node in nodes %}
				{% include '_node.twig' with {'node': node} only %}
			{% endfor %}
		</ul>
{% endblock %}

