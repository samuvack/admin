{% extends 'baselayout.twig' %}
{% block title 'Map overview' %}

{% block content %}{% endblock %}

{% block map %}
		<div id="map" class="map"></div>
		<div id="3dmap" class="map"></div>


        <div id="infoPanel" class="info">

            <button id="2dbutton" class="btn btn-default btn-sm">Full 2D view</button>
            <button id="3dbutton" class="btn btn-default btn-sm">Full 3D view</button>
            <button id="2d3dbutton" class="btn btn-default btn-sm">Splitted 2D/3D view</button>
            <h3 class="">Node info</h3>
            <div id="nodeInfo">
                <p>All nodes with geographical information</p>

                <ul class="nodes">
                    {% for node in nodes %}
                        {{ render(node) }}
                    {% endfor %}
                </ul>
            </div>
			<a id="mapExport" class="btn btn-default btn-sm" download="map.png">Export map as image</a>
		</div>
{% endblock %}

{% block script %}
	<!--OL3-->
	<link rel="stylesheet" href="http://openlayers.org/en/v3.8.2/css/ol.css" type="text/css">
	<script src="http://openlayers.org/en/v3.8.2/build/ol.js" type="text/javascript"></script>

	<!--Cesium-->
	<script src="http://openlayers.org/ol3-cesium/Cesium/Cesium.js"></script>

	<!--Ol3-Cesium-->
	<script src="http://openlayers.org/ol3-cesium/ol3cesium.js"></script>


	<script src="{{ app.request.basepath }}/scripts/createMap3.js"> </script>
{% endblock %}
