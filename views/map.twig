{% extends 'baselayout.twig' %}
{% block title 'Map overview' %}

{% block content %}
{% endblock %}

{% block map %}
		<div id="map" class="map"></div>
		<div id="3dmap" class="map"></div>

		<div id="nodeInfo" class="info">
			<p>All nodes with geographical information</p>

			<ul class="nodes">
				{% for node in nodes %}
					{{ render(node) }}
				{% endfor %}
			</ul>
		</div>
{% endblock %}

